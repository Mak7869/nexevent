<% layout('layouts/boilerplate') %>

<div
  class="container d-flex justify-content-center align-items-center"
  style="min-height: 80vh"
>
  <div class="col-md-6 col-lg-5">
    <div class="card login-card shadow-lg border-0">
      <div class="card-header text-center bg-transparent border-0 mt-3">
        <h2 class="fw-bold" style="color: #0d6efd">Welcome Back</h2>
        <p class="text-muted mb-2">
          <% if(typeof message !== 'undefined' && message) { %>
            Please try again
          <% } else { %>
            Login to continue to <strong>NexEvent</strong>
          <% } %>
        </p>
      </div>

      <div class="card-body px-4 pt-2">
        <% if(typeof message !== 'undefined') { %>
        <div class="alert alert-danger text-center shadow-sm">
          <%= message %>
        </div>
        <% } %>

        <form action="/login" method="POST">
          <!-- Email -->
          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email</label>
            <div class="input-group">
              <span class="input-group-text bg-light"
                ><i class="fa-solid fa-envelope"></i
              ></span>
              <input
                type="email"
                name="email"
                id="email"
                class="form-control modern-input"
                placeholder="Enter your email"
                required
              />
            </div>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <label for="password" class="form-label fw-semibold"
              >Password</label
            >
            <div class="input-group">
              <span class="input-group-text bg-light"
                ><i class="fa-solid fa-lock"></i
              ></span>
              <input
                type="password"
                name="password"
                id="password"
                class="form-control modern-input"
                placeholder="Enter your password"
                required
              />
            </div>
          </div>

          <!-- Button -->
          <div class="d-grid mt-4">
            <button
              type="submit"
              class="btn btn-primary py-2 fw-semibold login-btn"
            >
              Login
            </button>
          </div>
        </form>
      </div>

      <!-- Footer -->
      <div class="card-footer text-center bg-transparent border-0 mb-3">
        <small class="text-muted">
          Donâ€™t have an account?
          <a href="/register" class="text-primary fw-semibold">Register</a>
        </small>
      </div>
    </div>
  </div>
</div>

<!-- Extra Styling -->
<style>
  /* RAINBOW BACKGROUND SAME AS HOME PAGE */
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #f5576c 75%, #4facfe 100%) !important;
    background-attachment: fixed;
    min-height: 100vh;
  }

  .login-card {
    border-radius: 18px;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(18px);
    transition: 0.3s;
  }

  .login-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .modern-input {
    padding: 10px;
    transition: all 0.2s ease;
    border-radius: 8px;
  }

  .modern-input:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.2);
  }

  .login-btn {
    border-radius: 10px;
    transition: 0.3s;
  }

  .login-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(13, 110, 253, 0.3);
  }
</style>
